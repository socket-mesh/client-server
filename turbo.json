{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalDependencies": ["./config/typescript-config/tsconfig.build.json"],
	"tasks": {
		"build": {
			"dependsOn": ["^lint", "^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"bundle": {
			"dependsOn": ["^test"],
			"outputs": ["bundle/**"]
		},
		"deploy": {
			"dependsOn": ["^test"]
		},
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": []
    },
		"start": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
    "test": {
			"dependsOn": ["^build"]
		}
	}
}