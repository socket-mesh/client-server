{
	"name": "@socket-mesh/mono-repo",
	"workspaces": [
		"packages/*"
	],	
	"scripts": {
		"build": "npm run build:auth && npm run build:errors && npm run build:formatter && npm run build:channels && npm run build:client && npm run build:server",
		"build:auth": "cd packages/auth && npm run build",
		"build:channels": "cd packages/channels && npm run build",
		"build:client": "cd packages/client && npm run build",
		"build:formatter": "cd packages/formatter && npm run build",
		"build:errors": "cd packages/errors && npm run build",
		"build:server": "cd packages/server && npm run build",
		"test": "npm run test:formatter && npm run test:client && npm run test:server",
		"test:client": "cd packages/client && npm run test",
		"test:formatter": "cd packages/formatter && npm run test",
		"test:server": "cd packages/server && npm run test"
	},
	"devDependencies": {
		"@types/node": "^20.14.9",
		"cross-env": "^7.0.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.3"
	}	
}